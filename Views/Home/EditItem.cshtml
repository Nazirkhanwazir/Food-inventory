@model FoodInventory.Models.Item
@{
    ViewBag.Title = "Edit Item";
}


<section class="container">
    <div class="card col-md-6 mx-auto mb-5">
        <div class="card-header">
            Search Items
        </div>
        <div class="card-body">
            @if (ViewBag.SearchError != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.SearchError
                </div>
            }

            <form method="post" action="@Url.Action("SearchItemUpdate", "Home")">
                <div class="mb-3 row">
                    <label class="col-sm-4 col-form-label">Item No</label>
                    <div class="col-sm-8">
                        <input type="number" name="itemNo" class="form-control" required>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-8 offset-sm-4">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card col-md-6 mx-auto mb-5">
        <div class="card-header">
            Edit Item
        </div>
        <div class="card-body">
            @if (ViewBag.Success != null)
            {
                <div class="alert alert-success">
                    @ViewBag.Success
                </div>
            }
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.Error
                </div>
            }
        <form method="post" action="@Url.Action("EditItem", "Home")">
            <input type="hidden" name="Item_No" value="@(Model != null ? Model.Item_No : 0)" class="form-control" required>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label">Item Name</label>
                <div class="col-sm-8">
                    <input type="text" name="Item_Name" value="@(Model != null ? Model.Item_Name : String.Empty)" class="form-control" required>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label">Category</label>
                <div class="col-sm-8">
                    <input type="text" name="Category" value="@(Model != null ? Model.Category : String.Empty)" class="form-control" required>
                </div>
            </div>    
                <div class="mb-3 row">
                    <label class="col-sm-4 col-form-label">Brand</label>
                    <div class="col-sm-8">
                        <input type="text" name="Brand" value="@(Model != null ? Model.Brand: String.Empty)" class="form-control" required>
                    </div>
                </div>
            
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label">Quantity</label>
                <div class="col-sm-8">
                    <input type="number" name="Quantity" min="0" value="@(Model != null ? Model.Quantity : 0)" class="form-control" required>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label">Cost Price</label>
                <div class="col-sm-8">
                    <input type="number" name="Cost_Price" min="0" value="@(Model != null ? Model.Cost_Price : 0)" class="form-control" required>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label">Retail Price</label>
                <div class="col-sm-8">
                    <input type="number" name="Retail_Price" min="0" value="@(Model != null ? Model.Retail_Price : 0)" class="form-control" required>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label">Threshhold Quantity</label>
                <div class="col-sm-8">
                    <input type="number" name="Threshhold_Quantity" min="0" value="@(Model != null ? Model.Threshhold_Quantity : 0)" class="form-control" required>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-8 offset-sm-4">
                    <button type="submit" class="btn btn-success">Update</button>
                </div>
            </div>
        </form>
        </div>
    </div>
</section>


