
@{
    ViewBag.Title = "Stock Report";
}

<section class="container">
    <div class="card col-md-6 mx-auto mb-5">
        <div class="card-header">
            Stock Report
        </div>
        <div class="card-body">
            <form>
                <div class="mb-3 row">
                    <label class="col-sm-4 col-form-label">From</label>
                    <div class="col-sm-8">
                        <input type="date" class="form-control">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-4 col-form-label">To</label>
                    <div class="col-sm-8">
                        <input type="date" class="form-control">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-4 col-form-label">Item No</label>
                    <div class="col-sm-8">
                        <input type="number" class="form-control">
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-8 offset-sm-4">
                        <button type="submit" class="btn btn-success">Generate</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

