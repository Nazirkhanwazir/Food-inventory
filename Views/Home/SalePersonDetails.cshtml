@model FoodInventory.Models.Salespersondetail
@{
    ViewBag.Title = "Sale Person Details";
}


<section class="container">
    <div class="card col-md-6 mx-auto mb-5">
        <div class="card-header">
            Search Items
        </div>
        <div class="card-body">
            @if (ViewBag.SearchError != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.SearchError
                </div>
            }

            <form method="post" action="@Url.Action("SalePersonSearch", "Home")">
                <div class="mb-3 row">
                    <label class="col-sm-4 col-form-label">Sale Person Name</label>
                    <div class="col-sm-8">
                        <input type="text" name="itemNo" class="form-control" required>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-8 offset-sm-4">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card col-md-6 mx-auto mb-5">
        <div class="card-header">
            Stock
        </div>
        <div class="card-body">
           
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.Error
                </div>
            }
        <form method="post" action="@Url.Action("SalePersonDetails", "Home")">
            <input type="hidden" name="Salesperson" value="@(Model !=null ? Model.Salesperson:string.Empty)" class="form-control" required>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label">Date</label>
                <div class="col-sm-8">
                    <input type="text" name="Date" value="@(Model !=null ? Model.Date:string.Empty)" class="form-control" required disabled>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label">Total Sale</label>
                <div class="col-sm-8">
                    <input type="number" name="Totalsale" value="@(Model !=null ? Model.Totalsale:0)" class="form-control" required>
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label">login Amount</label>
                <div class="col-sm-8">
                    <input type="number" name="Loginammount" min="0" value="@(Model !=null ? Model.Loginammount:0)" class="form-control" required>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label">Logout Amount</label>
                <div class="col-sm-8">
                    <input type="number" name="Logoutammount" min="0" value="@(Model !=null ? Model.Logoutammount:0)" class="form-control" required>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label">Counter</label>
                <div class="col-sm-8">
                    <input type="text" name="Counter" min="0" value="@(Model !=null ? Model.Counter:string.Empty)" class="form-control" required>
                </div>
            </div>
        </form>
        </div>
    </div>
</section>




